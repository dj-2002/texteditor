<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <ImageButton
        android:id="@+id/bold"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bold"
        android:layout_marginStart="4dp"
       />

    <ImageButton
        android:id="@+id/italic"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_italic"
        android:layout_marginStart="4dp"
        />

    <ImageButton
        android:id="@+id/underline"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_underline"
        android:layout_marginStart="4dp"/>

    <ImageButton
        android:id="@+id/strikethrough"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_strikethrough"
        android:layout_marginStart="4dp"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/round_btn_white"

        android:src="@drawable/ic_color_text"/>

    <ImageButton
        android:id="@+id/color_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/round_btn_white"

        android:src="@drawable/ic_color_background"/>


    <ImageButton
        android:id="@+id/bullets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/round_btn_white"

        android:src="@drawable/ic_bullets"/>

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn_white"
        android:src="@drawable/ic_close"
        android:layout_marginStart="4dp"
        />


    <ImageButton
        android:id="@+id/align_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn_white"
        android:src="@drawable/ic_align_left"
        android:layout_marginStart="4dp"/>


    <ImageButton
        android:id="@+id/align_center"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_align_center"
        android:layout_marginStart="4dp"
        />

    <ImageButton
        android:id="@+id/align_right"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_align_right"
        android:layout_marginStart="4dp"/>


    <ImageButton
        android:id="@+id/hyperlink"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_insert_link"
        android:layout_marginStart="4dp"/>


    <ImageButton
        android:id="@+id/effect"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_magic"
        android:layout_marginStart="4dp"/>


    <ImageButton
        android:id="@+id/textSize"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_textsize"
        android:layout_marginStart="4dp"/>

    <ImageButton
        android:id="@+id/textFont"
      android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_font"
        android:layout_marginStart="4dp"/>

   <ImageButton
       android:id="@+id/heading"
       android:background="@drawable/round_btn_white"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_heading"
       android:layout_marginStart="4dp"/>

<!--    <ImageButton-->
<!--        android:id="@+id/quote"-->
<!--        android:background="@drawable/round_btn_white"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/ic_quote"-->
<!--        android:layout_marginStart="4dp"/>-->


</androidx.appcompat.widget.LinearLayoutCompat>
</HorizontalScrollView>