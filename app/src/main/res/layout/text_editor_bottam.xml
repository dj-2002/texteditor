<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageButton
        android:id="@+id/bold"
        android:background="@drawable/round_btn_white"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bold"
       />

    <ImageButton
        android:id="@+id/italic"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_italic"
        />

    <ImageButton
        android:id="@+id/underline"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_underline"/>

    <ImageButton
        android:id="@+id/strikethrough"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_strikethrough"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn_white"

        android:src="@drawable/ic_color_text"/>

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn_white"
        android:src="@drawable/ic_close"
        />


    <ImageButton
        android:id="@+id/align_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn_white"
        android:src="@drawable/ic_align_left"/>


    <ImageButton
        android:id="@+id/align_center"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_align_center"
        />

    <ImageButton
        android:id="@+id/align_right"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_align_right"></ImageButton>

    <ImageButton
        android:id="@+id/textSize"
        android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_textsize" />

    <ImageButton
        android:id="@+id/textFont"
      android:background="@drawable/round_btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_font"></ImageButton>

</androidx.appcompat.widget.LinearLayoutCompat>
</HorizontalScrollView>